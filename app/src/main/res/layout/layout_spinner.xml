<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redTransparent">

    <LinearLayout android:id="@+id/footerlayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="Elige un estado"
            android:gravity="left"
            android:textColor="#ffff"
            android:lineHeight="21dp"
            android:textSize="20dp"
            android:layout_marginBottom="0dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
        <AutoCompleteTextView
            android:id="@+id/estado"
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:layout_above="@+id/footerlayout"
            android:background="#FFFF"
            android:textColor="#000"
            android:hint="Estado"
            android:layout_marginBottom="50dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:popupBackground="#FFFF"
            />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="50dp"
                android:layout_height="54dp"
                android:padding="5dp"
                android:src="@mipmap/baseline_arrow_drop_down_black_24"
                android:layout_marginTop="10dp"
                android:background="#FFFF"/>
        </LinearLayout>
        <Button
            android:id="@+id/aceptar"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_above="@+id/footerlayout"
            android:layout_marginBottom="10dip"
            android:background="@drawable/b_rounded"
            android:text="Aceptar"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>